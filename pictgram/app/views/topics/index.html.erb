<div class="topic-index-wrapper">
  <div class="container">
    <% @topics.each do |topic| %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="topic-index-single">
            <h2 class="topic-author">
              <%= topic.user.name %>
            </h2>
            <%= image_tag topic.image.url %>

            <% if !topic.favorite_users.include?(current_user) %>
              <%= link_to favorites_path(topic_id: topic.id), method: :post do %>
                <%= image_tag 'icons/heart-black.png', class: 'topic-index-icon' %>
              <% end %>
            <% else %>
                <!--%= form_for(topic.Favorite.find_by(user_id: @current_user.id, topic_id: params[:topic_id]), method: :destroy, remote: true) %-->
                <%= image_tag 'icons/red_heart.jpg', class: 'topic-index-icon' %>
              
            <% end %>
            
            <!--adding to favorites count function-->
            <%= @favorite_count = Favorite.where(topic_id: params[:topic_id]).count %>
            
            <%= image_tag 'icons/comment.png', class: 'topic-index-icon' %>
            <p class="topic-text">
              <%= topic.description %>
            </p>
          </div>
          
          <!--コメント機能追加-->
          <h2>コメント一覧</h2>
          <% topic.comments.each do |c| %>
            <div>
              <%= c.content %>
              <hr>
            </div>
          <% end %>
          
          <%= form_for(@comment, :url => {:controller => :comments, :action => :create}) do |f| %>

          <div class="form-group">
            <%= f.label :content %>
            <%= f.text_area :content, class: 'form-control' %>
            <%= f.hidden_field :topic_id, value: topic.id %>
          </div>
          <%= f.submit '投稿', class: 'btn btn-black btn-block' %>

          <% end %>
          
        </div>
      </div>
    <% end %>
  </div>
</div>